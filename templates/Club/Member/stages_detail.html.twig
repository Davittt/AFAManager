{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>{{ member.getMemberFirstname()|title }} {{ member.getMemberName()|title }}</h1>
    <h2>Historique des stages ({{ member_tools.getStages().total }} h)</h2>
    {% for grade in member_tools.getStages().history %}
    <h3>{{ listData.getGrade(grade.Rank) }} ({{ grade.Total }} h)</h3>
    {% if grade.Stage is defined %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Date</th>
                <th scope="col">Dur√©e</th>
            </tr>
        </thead>
        <tbody>
        {% for stage in grade.Stage %}
            <tr>
                <td>{{ stage.Name }}</td>
                <td>{{ stage.Date|date("d/m/Y") }}</td>
                <td>{{ stage.Duration }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
    {% endfor %}
{% endblock %}

