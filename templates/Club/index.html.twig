{% extends 'base.html.twig' %}

{% block title %}
    AFAManager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <a href="{{ path('common_index') }}">Home</a>
    <h1>Liste des clubs</h1>
    <h2><a href="{{ path('club_create') }}">Ajouter</a></h2>
    <table>
        {% for active in active_clubs %}
            <tr>
                <td colspan="3"><h2>{{ active.province }}</h2></td>
            </tr>
            <tr>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Commandes</th>
            </tr>
            {% for club in active.Clubs %}
                <tr>
                    <td>{{ club.Number }}</td>
                    <td>{{ club.Name|title }}</td>
                    <td><a href="{{ path('club_detail_association', {'club_number': club.Number}) }}">Association</a> - <a href="{{ path('club_detail_class', {'club_number': club.Number}) }}">Cours</a> - <a href="{{ path('club_active_members', {'club_number': club.Number}) }}">Membres Actifs</a> - <a href="{{ path('club_inactive_members', {'club_number': club.Number}) }}">Membres Inactifs</a> - <a href="{{ path('club_disaffiliate', {'club_number': club.Number}) }}">Désaffilier</a></td>
                </tr>
            {% endfor %}
        {% endfor %}
        {% if inactive_clubs != null %}
            <tr>
                <td colspan="3"><h2>Clubs Inactifs</h2></td>
            </tr>
            <tr>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Commandes</th>
            </tr>
            {% for club in inactive_clubs %}
                <tr>
                    <td>{{ club.Number }}</td>
                    <td>{{ club.Name }}</td>
                    <td><a href="{{ path('club_reassign', {'club_number': club.Number}) }}">Activer</a> - <a href="{{ path('club_detail_association', {'club_number': club.Number}) }}">Association</a> - <a href="{{ path('club_detail_class', {'club_number': club.Number}) }}">Cours</a> - <a href="{{ path('club_active_members', {'club_number': club.Number}) }}">Membres Actifs</a> - <a href="{{ path('club_inactive_members', {'club_number': club.Number}) }}">Membres Inactifs</a></td>
                </tr>
            {% endfor %}
        {% endif %}
    </table>
{% endblock %}

{% block javascripts %}
{% endblock %}
