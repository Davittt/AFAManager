    {% for grade in history %}
    <h3>{{ listData.getGrade(grade.Rank) }} ({{ grade.Total }} h)</h3>
    <table>
        <tr>
            <th>Nom</th>
            <th>Date</th>
            <th>Dur√©e</th>
        </tr>
        {% for stage in grade.Stage %}
        <tr>
            <td>{{ stage.Name }}</td>
            <td>{{ stage.Date|date("d/m/Y") }}</td>
            <td>{{ stage.Duration }}</td>
        </tr>
        {% endfor %}
    </table>
    {% endfor %}
{% endblock %}

